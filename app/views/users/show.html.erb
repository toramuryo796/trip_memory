        <li class="user-group">
          <%= link_to "#{group.name}", group_path(group) %>
        </li>
      <% end %>
    </ul>
  </div>
  <%# /グループリスト %>

  <%# 行先候補一覧リンク %>
  <div class="user-candidates-link">
    <%= link_to "行先候補一覧", candidates_user_path(@user), class: "user-candidate-link", local: true %>
  </div>
