<div class="main-header">
  <%= render partial: "shared/main_header", locals: { user: @user, group: @group} %>
</div>

<div class="plan-back">
  <div class="dictionary-make-largebox">
    <%# タイトル %>
    <div class="dictionary-title">
      <h1> 単語帳 </h1>
    </div>
    <%# /タイトル %>
    <%# 前ページに戻る %>
    <div class="back-page">
      <%= link_to "旅行計画に戻る", group_plan_path(@group, @plan), class: "link" %>
    </div>
    <%# /前ページに戻る %>

    <%# フォーム %>
    <div class="dictionary-form-box">
      <div class="dictionary-add">
        <%= render partial: "form", locals:{dictionary: Dictionary.new, value: "追加"} %>  
      </div>
    </div>
    <%# /フォーム %>

    <%# テーブル %>
    <div class="dictionary-large-box">
      <table id="dictionary-table">
        <tbody id="dictionary-tbody">
          <tr>
            <th>日本語</th>
            <% if @language %>
              <th>
                <%= @language %>
              <th>
            <% end %>
          </tr>
        <%# ajaxで追加 %>
      <%= render @dictionaries %>
        <%# /ajaxで追加 %>
        </tbody>
      </table>
    <%# /テーブル %>
    </div>
  </div>
</div>