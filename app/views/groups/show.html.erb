<%# hewder %>
<div class="main-header">
  <%= render partial: "shared/main_header", locals: { user: @user, group: @group} %>
</div>
<%# /hewder %>
<div class="group-large-box">
  <h1><%= @group.name %></h1>
  <%= link_to "グループを削除", group_path(@group), class: "link", method: :delete %>
  <div class="show-members">
  <h2 class="text-member">メンバー</h2>
  <ul class="members-list">
  <% @group.users.each do |user| %>
    <li class="members">
      <%= user.user_ID %>
    </li>
  <% end %>
  </ul>
  <ul class="contents-list">
    <li class="contents">
      <%= link_to "行先候補を作成", new_group_candidate_path(@group, @candidate), class: "link" %>
    </li>
    <li class="contents">
      <%= link_to "行先候補一覧", group_candidates_path(@group, @candidate), class: "link" %>
    </li>
    <li class="contents">
      <%= link_to "旅行計画作成",  new_group_plan_path(@group, @plan), class: "link" %>
    </li>
    <li class="contents">
      <%= link_to "旅行計画一覧",  group_plans_path(@group, @plan), class: "link" %>
    </li>
    <% if @plans.present? %>
    <li class="contents">
      <%= link_to "思い出一覧",  group_memories_path(@group, @memory), class: "link" %>
    </li>
    <%end%>
  </ul>
</div>