<%# hewder %>
<div class="main-header">
  <%= render partial: "shared/main_header", locals: { user: @user, group: @group} %>
</div>
<%# /hewder %>
<div class="group-large-box">
  <div class="group-show-box">

    <div class="group-show-head">
      <div class="group-show-title">
        <h1><%= @group.name %></h1>
      </div>
      <%= link_to "グループを削除", group_path(@group), class: "link group-delete", method: :delete %>
    </div>

    <div class="show-members">
      <h2 class="text-member">メンバー</h2>
      <ul class="members-list">
      <% @group.users.each do |user| %>
        <li class="members">
          <%= user.user_ID %>
       </li>
      <% end %>
      </ul>
    </div>

    <ul class="group-show-contents-list">
      <li class="group-show-contents">
        <%= link_to "行き先候補を作成", new_group_candidate_path(@group, @candidate), class: "link" %>
      </li>
      <li class="group-show-contents">
        <%= link_to "行き先候補一覧", group_candidates_path(@group, @candidate), class: "link" %>
      </li>
      <li class="group-show-contents">
        <%= link_to "旅行計画作成",  new_group_plan_path(@group, @plan), class: "link" %>
      </li>
      <li class="group-show-contents">
        <%= link_to "旅行計画一覧",  group_plans_path(@group, @plan), class: "link" %>
      </li>
      <% if @plans.present? %>
      <li class="group-show-contents">
        <%= link_to "思い出一覧",  group_memories_path(@group, @memory), class: "link" %>
      </li>
      <%end%>
    </ul>

  </div>
</div>