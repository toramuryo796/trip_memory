<div class="plan-back">
  <div class="dayhow-largebox">
    <div class="dayhow-box">
      <h1>スケジュール日程の追加</h1>
      <%= form_with model: @day_how, url: day_hows_path,  method: :post, local: true do |f| %>

        <%# エラー表示 %>
        <%= render partial: 'shared/error_messages', locals: { model: @day_how} %>
        <%# /エラー表示%>
        
        <%= f.text_field :passed, class: "passed-form", placeholder: "半角数字" %>日目を加える
        <%= f.text_field :plan_id, class: "hidden plan_id_form", value: "#{@plan_id}" %>
        <%= f.submit "作成" %>
      <% end %>
      <%= link_to "スケジュール画面に戻る", schedules_path(plan_id: @plan_id), class: "link" %>
    </div>
  </div>
</div>