<h1> スケジュール作成 <h1>
<%= link_to "旅行計画に戻る", group_plans_path(@plan, @group), local: true %>
  <div class="day-display">
    <h2> 1日目のスケジュール </h2>
  </div>
  <div class="day-schedule-large-box">

    <div id="schedule-form">
      <%= render partial: "form", locals:{plan: @plan} %>
    </div>
  
    <table id="day-table" border="1">
      <tbody id="tbody">
        <tr>
          <th>時間</th>
          <th>カテゴリー</th>
          <th>予定</th>
        </tr>
        <% @schedules.each do |schedule| %>
          <%= render schedule %>
        <% end %>
      </tbody>
    </table>
  
  </div>